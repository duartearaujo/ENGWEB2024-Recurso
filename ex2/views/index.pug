extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1(class='w3-center') Lista de Livros
    .w3-container
      table.w3-table.w3-bordered.w3-striped
        thead
          tr
            th bookId
            th Title
            th Author
            th Publish Date
            th Price
        tbody
          each livro in livros
            tr
              td
                a(href=`/${livro.bookId}`, style='text-decoration: none; color: #009688;') #{livro.bookId}
              td #{livro.title}
              td #{livro.author}
              td #{livro.pubishDate}
              td #{livro.price}